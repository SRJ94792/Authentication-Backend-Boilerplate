# Database Configuration
# MongoDB Atlas connection string
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# Server Configuration
PORT=8000

# CORS Configuration
# Use * for development, specify domains for production
CORS_ORIGIN=*
# For production, use specific domains:
# CORS_ORIGIN="https://example.com,https://another.com"

# JWT Access Token Configuration
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-change-in-production
ACCESS_TOKEN_EXPIRY=1d

# JWT Refresh Token Configuration
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
REFRESH_TOKEN_EXPIRY=10d

# Mailtrap Email Configuration (for development/testing)
MAILTRAP_SMTP_HOST=sandbox.smtp.mailtrap.io
MAILTRAP_SMTP_PORT=2525
MAILTRAP_SMTP_USER=your-mailtrap-username
MAILTRAP_SMTP_PASS=your-mailtrap-password

# Password Reset Configuration
FORGOT_PASSWORD_REDIRECT_URL=http://localhost:8000/api/v1/auth/reset-password
